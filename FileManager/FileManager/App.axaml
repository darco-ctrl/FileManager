<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="FileManager.App"
             xmlns:local="using:FileManager"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

	<Application.Styles>
		<FluentTheme />
		<StyleInclude Source="avares://FileManager/Styles/DefaultAppStyle.axaml"></StyleInclude>
	</Application.Styles>

	<Application.Resources>
		<SolidColorBrush x:Key="PrimaryBackground">#111111</SolidColorBrush>
		<SolidColorBrush x:Key="SecondaryBackground">#1E1E1E</SolidColorBrush>
	</Application.Resources>
</Application>