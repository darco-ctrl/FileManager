							40, 40, 40, 40, 40, *, 40, 40, 40, 40, 40
						</Grid.ColumnDefinitions>
						<!--
						THisi s path block this is where path is shown
						-->
						<Border Margin="5, 5, 0, 5" Grid.Column="5"
								BorderThickness="2"
								BorderBrush="White"
								Background="{DynamicResource ResourceKey=PrimaryBackground}"
								CornerRadius="6">
							<TextBox x:Name="PathTextBox"
									 Text=""
									 Background="Transparent"
									 Foreground="White"
									 VerticalAlignment="Center"
									 SelectionForegroundBrush="White"
									 BorderBrush="Transparent"
									 Margin="2,3,2,3">
							</TextBox>
						</Border>

						<Border Grid.Column="6" Background="White" Margin="5,5,0,5">
							<Button Content="S" 
									VerticalAlignment="Center" HorizontalAlignment="Center"
									Click="SearchButtonClicked"
									/>
						</Border>


					</Grid>
				</Border>

				<!-- 
				<Border Grid.Row="1" Background="{DynamicResource ResourceKey=SecondaryBackground}"  Margin="10,5,10,10"
						CornerRadius="10">

				</Border>
				-->


				<ScrollViewer Grid.Row="1" Margin="5" CornerRadius="10">
					<ItemsControl ItemsSource="{Binding CurrentLoadedEntires}">
						<ItemsControl.ItemTemplate>
							<DataTemplate>
								<controls:EntriesButton  
										DoubleTapped="OnEntryDoubleTapped" 
										Click="EntryClicked"
										PointerPressed="OnEntryButtonPointerPressed"
										HorizontalAlignment="Stretch"
										RenderTransform="None"
										VerticalAlignment="Stretch"
										>
									<TextBlock
										Text="{Binding Name}"
										Foreground="White"
										Padding="10,0,0,0">
									</TextBlock>
								</controls:EntriesButton>
							</DataTemplate>
						</ItemsControl.ItemTemplate>
					</ItemsControl>
				</ScrollViewer>
				
			</Grid>
		</Border>

	</Grid>

