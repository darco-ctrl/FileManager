                        </buttons:EntryModifierButton>

                        <Line
                            Grid.Column="7"
                            Stroke="#2a2a2a"
                            StartPoint="0,15"
                            EndPoint="0,45" />


                        <!--  home  -->
                        <Button
                            Grid.Column="8"
                            Width="32"
                            Height="32"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            Click="HomeButtonClicked">

                            <Image
                                Width="24"
                                Height="24"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Source="/Assets/props/house.ico" />

                        </Button>

                        <!--  sort  -->
                        <Button
                            Grid.Column="9"
                            Width="32"
                            Height="32"
                            VerticalAlignment="Center"
                            Background="Transparent">

                            <Image
                                Width="24"
                                Height="24"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Source="/Assets/props/arrow-down-up.ico" />

                        </Button>

                        <!--  search  -->
                        <Border
                            Grid.Column="11"
                            Width="320"
                            Height="40"
                            Padding="10,0,10,0"
                            Background="#2a2a2a"
                            BorderBrush="#3a3a3a"
                            BorderThickness="1"
                            CornerRadius="6">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Image
                                    Grid.Column="0"
                                    Width="24"
                                    Height="24"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Source="avares://FileManager/Assets/props/search.ico" />

                                <TextBox
                                    x:Name="SearchTextBox"
                                    Grid.Column="1"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    FontSize="20"
                                    Foreground="White"
                                    TextAlignment="Left"
                                    Watermark="Search" />

                            </Grid>

                        </Border>

                        <!--  view options  -->
                        <Border
                            Grid.Column="12"
                            Width="70"
                            Height="40"
                            Background="#2a2a2a"
                            CornerRadius="10">

                            <Grid>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <ToggleButton
                                    Grid.Column="0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="Transparent"
                                    CornerRadius="10">

                                    <Image
                                        Width="24"
                                        Height="24"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Source="avares://FileManager/Assets/props/grid-3x3.ico" />

                                </ToggleButton>

                                <ToggleButton
                                    Grid.Column="1"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="Transparent"
                                    CornerRadius="10">

                                    <Image
                                        Width="24"
                                        Height="24"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Source="avares://FileManager/Assets/props/list.ico" />

                                </ToggleButton>

                            </Grid>

                        </Border>

                    </Grid>



                </Border>


                <!--  MAIN File viewer  -->
                <Border
                    Grid.Row="2"
                    BorderBrush="#2A2A2A"
                    BorderThickness="0,0,1,1">

                    <ListBox
                        x:Name="MainEntryList"
                        Grid.Row="1"
                        Margin="5"
                        Background="Transparent"
                        DoubleTapped="OnEntryDoubleTapped"
                        ItemsSource="{Binding CurrentLoadedEntires}"
                        SelectionMode="Single">

                        <!--  Context Menu  -->
                        <ListBox.ContextMenu>
                            <ContextMenu Opened="RightClickContextMenuOpened">

                                <MenuItem
                                    Click="NewFileMenuItemClicked"
                                    Header="New File"
                                    IsEnabled="True" />
                                <MenuItem
                                    Click="NewFolderMenuItemClicked"
                                    Header="New Folder"
                                    IsEnabled="True" />
                            </ContextMenu>
                        </ListBox.ContextMenu>

                        <!--  Items Panel with virtualization  -->
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Padding="10,0,0,0"
                                    Foreground="White"
                                    Text="{Binding Name}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </Grid>
        </Grid>
    </Grid>
