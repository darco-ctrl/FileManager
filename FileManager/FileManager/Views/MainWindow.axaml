<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:FileManager.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		
		xmlns:controls="using:FileManager.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FileManager.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="FileManager"
		Focusable="True"
		PointerPressed="PointerPresed">

	<Window.Styles>
		<Style Selector="controls|EntriesButton">
			<Setter Property="Background" Value="Transparent"/>
		</Style>

		<Style Selector="controls|EntriesButton:checked">
			<Setter Property="Background" Value="#FF4C4C4C"/>
		</Style>

		<Style Selector="controls|EntriesButton:pointerover">
			<Setter Property="Background" Value="#FF858282"/>
		</Style>

		<Style Selector="controls|EntriesButton:pressed">
			<Setter Property="Background" Value="#FF6B6A6A"/>
		</Style>
		
	</Window.Styles>

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>
	
	
	<!-- Grid 0 - this is the main grid everything is inside this
	     ^^^^^^
		 i marked grid 0 cuz its gona get confusing so to keep track of that
		 i think this will help if anyone trying to understand this-->
	<Grid Background="{DynamicResource ResourceKey=PrimaryBackground}">

		<!--
		RowDefinition 0 is for titlebar it is set to auto cuz it will resize
		according to content inside it
		
		RowDefinition 1 is for tabs sections
		
		RowDefinition 2 this is for all main stuff
		-->

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="250"/> <!-- Grid 0 Colum 0 side panel-->
			<ColumnDefinition Width="*"/> <!-- Gird 0 Colunm 1 Main body-->
		</Grid.ColumnDefinitions>
		
		<!--
		Grid 0 Row - 0
		This is title bar thats all to say 1D1D1D
		-->
		<Border Grid.Column="0" Grid.ColumnSpan="2"
				Background="{DynamicResource ResourceKey=PrimaryBackground}">
			<TextBlock Text="Title Bar" Margin="10" FontSize="10"/>
		</Border>

		<Border Grid.Column="0"
				Background="{DynamicResource ResourceKey=PrimaryBackground}">
			
			<!--
			Grid: 0
			-->
			<Grid>

				<Grid.RowDefinitions>
					<RowDefinition Height="40"/> <!-- Grid: 0 Row: 0-->
					<RowDefinition Height="60"/> <!-- Grid: 0 Row: 1-->
					<RowDefinition Height="*"/> <!-- Grid: 0 Column: 2-->
					<RowDefinition Height="60"/>
				</Grid.RowDefinitions>
				
				<!-- Something here am thinking like icon or file manager name-->
				<Border Grid.Row="0" VerticalAlignment="Center">
					<TextBlock Text=">_   Dew" Foreground="White" FontWeight="ExtraBold" FontSize="20" VerticalAlignment="Center" Padding="20, 0, 0, 0"/>
				</Border>
				
				<!-- Utitlies like fav, recent stuff like that-->
				<Border Grid.Row="1" Background="White" Margin="10, 0, 0, 5" VerticalAlignment="Center" Height="30">
					<TextBlock Text="fav and some stuff like that"/>
				</Border>
					<!-- Side panel-->
				<ScrollViewer Grid.Row="2" Margin="10, 5, 10, 10" Background="Transparent"
					CornerRadius="10">
					<!-- <ItemControl/> this is the thing that makes UI for collection we made 'SidePanelItems' which we set 
					as 'DataContext' in App.axaml.cs (MainWindowViewModel)-->
					<ItemsControl ItemsSource="{Binding SidePanelItems}">
						<!-- this defines a visual template for each item in collection 'SidePanelItems' -->
						<ItemsControl.ItemTemplate>
							<!-- DataTemplate recives one item from 'SidePanelItems' as its 'DataContext' this lets us bind to 
        'SidePanelItems' item's (DriveViewModel) properties-->
							<DataTemplate>
								<Border Margin="5, 5, 5, 5">
									<TextBlock Foreground="LightGray" Text="{Binding Name}"/>
								</Border>
							</DataTemplate>
						</ItemsControl.ItemTemplate>
					</ItemsControl>
				</ScrollViewer>

				<Border Grid.Row="3" Background="White">
					
				</Border>
				
			</Grid>
		</Border>
		
		
		<!--
		THis is main part like the part where path window close and ttitle bar
		and most importantly files viewer
		-->
		<Border Grid.Column="1" Background="{DynamicResource ResourceKey=SecondaryBackground}">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="40"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

				<Border Grid.Row="0" Margin="5, 0, 5, 0">
					<Grid>
						<Grid.ColumnDefinitions>
